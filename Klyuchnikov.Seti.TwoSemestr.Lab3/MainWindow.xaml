<Window x:Class="Klyuchnikov.Seti.TwoSemestr.Lab3.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Lab3="clr-namespace:Klyuchnikov.Seti.TwoSemestr.Lab3"
        Title="MainWindow"
        Height="350"
        Width="525">
    <Grid DataContext="{Binding Source={x:Static Lab3:Server.Current}}">
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="281*" />
        </Grid.RowDefinitions>
        <ListBox Name="textBox1"
                 ItemsSource="{Binding Path=ConsoleOutArray}"
                 Grid.Row="1" />
        <Label Content="Порт:"
               Height="28"
               HorizontalAlignment="Left"
               Name="label1"
               VerticalAlignment="Top"
               Margin="0,1,0,0" />
        <TextBox Height="23"
                 HorizontalAlignment="Left"
                 Margin="36,3,0,0"
                 Name="portTB"
                 VerticalAlignment="Top"
                 Width="57" />
        <Button Content="Старт"
                Height="23"
                Margin="97,3,0,0"
                Name="button1"
                VerticalAlignment="Top"
                HorizontalAlignment="Left"
                Width="50"
                Click="button1_Click" />
    </Grid>
</Window>
